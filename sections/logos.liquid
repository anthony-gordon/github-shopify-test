<style>  
  #shopify-section-{{ section.id }} .logos-section {text-align: center; background: {{section.settings.section_bg}}; padding: {{section.settings.padding_desktop}};}
  #shopify-section-{{ section.id }} .logos-section .item {padding: {{section.settings.logos_padding}}; }
  #shopify-section-{{ section.id }} .logos-section .item img {display: block; height: {{section.settings.logos_height}};}
 
  @media all and (max-width: 600px) {
    #shopify-section-{{ section.id }} .logos-section {padding: {{section.settings.padding_mobile}};}
    .logos-section .item img {margin: auto;}
  }
</style>

<section class="logos-section">
  <div class="container">
    {%- if section.settings.title != "" -%}
    	<h2>{{section.settings.title}}</h2>
    {%- endif -%}
    <div class="large--flex medium--flex flex-wrap justify-content-center">
      {% for block in section.blocks %}
      <div class="item">
        {% if block.settings.link != blank %}<a href="{{block.settings.link}}" target="_blank">{% endif %}
          <img class="animation lazyload" data-sizes="auto" alt="{{block.settings.alt}}" src="{{"placeholder.png" | asset_url}}" data-srcset="{% include 'lazy_src', image: block.settings.image %}" />
        {% if block.settings.link != blank %}</a>{% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Logos",
    "presets": [
      {
        "name": "Logos",
        "category": "Home"
      }
    ],
    "settings": [
	  {
        "type": "color",
        "id": "section_bg",
        "label": "Background Color",
        "default": "#ffffff"
      },
	  {
        "type": "text",
        "id": "padding_desktop",
        "label": "Section Padding (Desktop)",
        "default": "4em 0"
      },
      {
        "type": "text",
        "id": "padding_mobile",
        "label": "Section Padding (Mobile)",
        "default": "3em 0"
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title",
		"default": "Logos"
      },
      {
        "type": "text",
        "id": "logos_height",
        "label": "Logos Height",
        "default": "3em"
      },
      {
        "type": "text",
        "id": "logos_padding",
        "label": "Logos Padding",
        "default": "2em 1em"
      }
    ],
    "blocks": [
      {
      	"type": "logo",
      	"name": "Logo",
      	"settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Logo"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "alt",
            "label": "ALT"
          }
      	]
      }
	]
  }
{% endschema %}