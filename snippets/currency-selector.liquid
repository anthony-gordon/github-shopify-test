<style>
  .currency-wrapper {
    position: relative;
    margin-left: 5px;
    margin-right: -15px;
  }

  .currency-positioned {
    top: -45px;
    right: -13px;
    text-align: center;
    border: none;
  }

  .currency-positioned.open {
    border: 1px solid #3144385e;
    margin: -1px;
    margin-bottom: 0;
    border-bottom: none;
  }

  .currency-positioned .fa-caret-down {
    transition: transform .5s ease;
    margin-left: 5px;
  }

  .currency-positioned.open .fa-caret-down {
    transform: rotate(180deg);
  }

  .currency-wrapper .dropdown {
    width: 70px;
    padding: 0;
    margin-top: -3px;
    display: inline-block;
    font-size: .9em;
    background: none;
  }

  .currency-wrapper .dropdown-content-currency {
    background: #fff;
    margin-top: 5px;
    transition: all .5s ease-in-out;
    -webkit-transition: all 0.5s ease-in-out;
    z-index: 1000;
    left: 0;
    max-height: 0;
    overflow-y: hidden;
    position: absolute;
    width: 100%;
  }

  .currency-wrapper .dropdown-content-currency .option:hover {
    font-weight: bold;
  }

  .currency-wrapper .dropbtn-currency {
    font-weight: bold;
  }

  .currency-wrapper .dropbtn-currency:hover .dropdown-content-currency {
    max-height: 100px;
  }

  .currency-wrapper:hover {
    border-bottom: 2px solid #8CC1D2;
  }

  .currency-wrapper .dropbtn-currency .fa-caret-down {
    transition: transform .5s ease;
  }
  .currency-wrapper .dropbtn-currency:hover .fa-caret-down {
    transform: rotate(180deg);
  }

  .currency-wrapper .dropbtn {
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    -o-transition: all 0.2s linear;
    -ms-transition: all 0.2s linear;
    transition: all 0.2s linear;
    height: 25px;
    font-weight: bold;
    color: #314438;
  }

  .currency-wrapper .option {
    cursor: pointer;
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    -o-transition: all 0.2s linear;
    -ms-transition: all 0.2s linear;
    transition: all 0.2s linear;
    font-weight: normal;
  }

  .currency-wrapper img {
    width: 14px;
    height: auto;
    background: white;
  }
</style>

<div class="currency-wrapper">
  <div class="currency-positioned">
    {%- if shop.enabled_currencies.size > 1 -%}
    <div class="dropdown custom-currency-drop">
      <button class="dropbtn-currency" type="button">
        USD <i class="fa fa-caret-down"></i>
        <div class="dropdown-content-currency">
          {% assign countries = 'USD:com,CAN:ca' | split: ',' %}
          {%- for country in countries -%}
          {% assign country_split =  country | split: ':' %}
          {% assign country_name = country_split[0] %}
          {% assign country_domain = country_split[1] %}
          <div class="option" onclick="updateCurrency('{{ country_domain }}')">
            {{ country_name }}
          </div>
          {%- endfor -%}
        </div>
      </button>
    </div>
    {%- endif -%}
  </div>
</div>