          <script>
            function addSections(e) {
              //console.log(e);
              
              // move sections to appropriate place
              var custom_content = document.querySelector('.checkout-custom-sections');
              var html_custom_content = custom_content.outerHTML;
              custom_content.remove();
              document.querySelector('.order-summary__section--total-lines').insertAdjacentHTML('afterEnd', html_custom_content);
              
              // open chat widget
              document.querySelector('.need-help a[href="#chat"]').onclick = function(e) {
                //console.log(e);
                e.preventDefault();
                GorgiasChat.open();
              }
              
              // move order summary header to correct place
              var order_summary_title = document.querySelector('#shopify-section-checkout-summary-order-title');
              document.querySelector('#order-summary').insertAdjacentHTML('afterBegin', order_summary_title.outerHTML);
              order_summary_title.remove();
            }
            
            document.addEventListener('DOMContentLoaded', addSections);
            document.addEventListener('shopify:section:load', addSections);
            
                        let metaLines = document.querySelectorAll(".product__description__property");
            
            for (const line of metaLines) {
              if (line.innerHTML.includes("Ship date")){
                  let ogLine = line.innerHTML;
                  let splitLine = ogLine.split(":");
                  line.innerHTML = splitLine[1];
              }
            }
            
          </script>
          
