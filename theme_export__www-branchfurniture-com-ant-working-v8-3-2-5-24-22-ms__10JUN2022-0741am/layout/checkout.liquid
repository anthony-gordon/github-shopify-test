    <script>
      $( document ).ready(function() {
        if (Shopify.Checkout.step === "contact_information") {
          var poBoxHtml = function(elementId) {
            var address = $(elementId).val().toLowerCase().replace(/[^a-zA-Z]+/g, '');

            var disableContinueInd = (address.indexOf('pobox') > -1)
            $("#continue_button").prop("disabled", disableContinueInd);
            if (disableContinueInd) {
               if (!$('#po-box-error').length) {
                 $('.step__sections').append('<div id="po-box-error" style="color: #d93535;margin-top: 10px;">Sorry, we are unable to ship to a PO Box. Please enter a different shipping address to continue.</div>')
               }
            } else {
               $('#po-box-error').remove()
            }
          }
          
          $('#checkout_shipping_address_address1').on('input',function(e){
            poBoxHtml('#checkout_shipping_address_address1')
          });
          $('#checkout_shipping_address_address2').on('input',function(e){
            poBoxHtml('#checkout_shipping_address_address2')
          });
          poBoxHtml('#checkout_shipping_address_address1')
          poBoxHtml('#checkout_shipping_address_address2')
        }
      });                                               
    </script>        
