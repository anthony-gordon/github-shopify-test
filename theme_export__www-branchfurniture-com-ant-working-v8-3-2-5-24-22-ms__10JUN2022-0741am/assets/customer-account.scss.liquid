@mixin opacity($value) {-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=$value)"; filter: alpha(opacity=$value); -moz-opacity: $value/100; -khtml-opacity: $value/100; opacity: $value/100;}
@mixin animation($duration){-webkit-transition: all $duration linear; -moz-transition: all $duration linear; -o-transition: all $duration linear; -ms-transition: all $duration linear; transition: all $duration linear;}
@mixin ease-animation($duration){-webkit-transition: all $duration ease-out; -moz-transition: all $duration ease-out; -o-transition: all $duration ease-out; -ms-transition: all $duration ease-out; transition: all $duration ease-out;}
@mixin transition($value){-webkit-transition: $value; -moz-transition: $value; -o-transition: $value; -ms-transition: $value; transition: $value;}

@mixin rotate($value) {-ms-transform: rotate($value); -webkit-transform: rotate($value); transform: rotate($value);}
@keyframes spin45L {0% {-ms-transform: rotate(-45deg); -webkit-transform: rotate(-45deg); transform: rotate(-45deg);}}
@keyframes spin45R {0% {-ms-transform: rotate(45deg); -webkit-transform: rotate(45deg); transform: rotate(45deg);}}
@mixin rotateFix($spinName){animation: $spinName 1ms; animation-play-state: paused;} /*useful to rotate elements that contains emoji and other special things that doesn't work with native 'transform: rotate...' */

.account .note {margin-bottom: 1em;}
.account .note a {display: inline-block; margin-bottom: 1em; font-size: 100%; text-decoration: underline;}
.account .note input {display: inline-block; width: auto; margin: 0; text-decoration: underline;}
.login-page.reset-password div.note {margin-top: 2em;}
.new-customer-cta {margin-top: 2em;}

.login-page {padding: 5em 0; text-align: center;}
.login-page h1, .login-page h2 {font-size: 2.5em; font-weight: 500;}
.login-page .container {max-width: 400px;}
.login-page input {width: 100%; margin-bottom: 1em;}
.login-page .social_front {overflow: hidden;}
.login-page .social {padding: 0;}
.login-page .social ul {overflow: hidden;}
.login-page .social h4 {font-size: 1.5em; margin: 0 0 1em;}
.login-page .social ul li {list-style: none;}
.login-page .social ul li a {color: #fff; font-size: 14px !important; text-align: center;}
.isNotMobile .login-page .social ul li a:hover {color: #fff;}
.login-page .btn {margin-top: 0.8em;}
.login-page .register-btn {margin-top: 0;}
.login-page .forgot {margin-top: 1em;}

.my-account h1, .my-account h2 {font-size: 2.5em;}
.my-account h1.heading-smaller, .my-account h2.heading-smaller {font-size: 1.2em; margin-bottom: 1em; text-transform: uppercase; font-weight: 700; {% if settings.body_font_custom != "" %}{{settings.body_font_custom_name}}{% else %}font-family: {{settings.body_font.family}}, {{settings.body_font.fallback_families}};{% endif %} }
.my-account .container {max-width: 86em;}
.my-account .larger {font-size: 1.2em;}
.my-account {padding: 3em 0;}
.my-account .content {width:75%; padding: 40px 5%; margin-top: 0; background: {{settings.content_second_color}}; text-align: left;}
.my-account .content input:not([type="checkbox"]), .my-account .content select {border-color: {{settings.content_text_color}};}
.my-account .content input:not([type="checkbox"]):focus, .my-account .content select:focus {background-color: #fff;}
.my-account .content input, .my-account .content select {margin-bottom: 1em;}
.my-account .content a:not(.btn) {text-decoration: underline;}
.my-account .grid {margin-top: 4em;}
.my-account .orders {margin-top: 3em;}
.my-account .orders h2 {margin-bottom: 2em;}
.my-account table th {font-weight: 700; padding: 0.8em 0; font-size: 0.9em; color: #fff; background: {{settings.content_main_color}}; text-transform: uppercase;}
.my-account table th:first-child {padding-left: 2em;}
.my-account table td:first-child {padding-left: 1.8em;}
.my-account table tr:not(:last-child) td {border-bottom: 1px solid;}
.my-account table td {padding: 2em 0;}
.my-account table td a {text-decoration: underline;}
.my-account table tfoot td {padding: 1em 0;}
.my-account table tfoot tr:first-child td {padding-top: 2em;}
.my-account table tfoot .total {font-size: 1.3em; font-weight: 700; padding-top: 1.1em;}
.my-account .note-default {font-size: 0.8em; text-transform: none; color: {{ settings.content_main_color}};}
.my-account .address-item {margin-bottom: 3em; padding-bottom: 1em; border-bottom: 1px solid {{ settings.content_text_color}};}
.my-account .address-item:last-child {margin: 0; border: 0; padding: 0;}
.my-account .address-item.first {margin-top: 1em;}
.my-account .address-title {float: left; font-size: 1.23em; font-weight: 700; margin-bottom: 0.8em;}
.my-account .address-actions{ float: left; margin-left: 2em; font-weight: 700; text-align: right; }
.my-account .address-actions a {font-size: 0.9em;}
.my-account .address-actions .action.edit {margin-right: 2em; }
.my-account .action {display: inline-block;}
.my-account .action svg {margin-right: 0.5em;}
.isNotMobile .my-account .action:hover svg path {color: {{settings.content_main_color}};}
.my-account .edit-address {margin-bottom: 1em;}
.my-account .add-address {margin-top: 1em;margin-bottom: 3em; padding-bottom: 2em; border-bottom: 1px solid #ddd;}
.my-account .customer-addresses .error {color: red; border-color: red;}

.default-address {margin: 1em 0 2em;}
.default-address input {@include opacity(0); position: absolute;}
.default-address input, .default-address label {display: inline-block; vertical-align: middle; cursor: pointer;}
.default-address label { position: relative;}
.default-address label:before {content: ''; background: transparent url({{"checked-white.png" | asset_url}}) no-repeat center; background-size: 0%; border: 2px solid {{settings.content_main_color}}; width: 18px; height: 18px; margin-right: 15px; text-align: center; @include animation(0.2s); }
.default-address input:checked + label:before {background-color: {{settings.content_main_color}}; background-size: 70%;}

/******** menu *******/
.my-account-menu {width:20%; margin-top: 40px;}
.my-account-menu .links {margin-top: 4em;}
.my-account-menu .links a {display: block; width: 100%; font-size: 1.2em; padding: 1em 0; font-weight: 500; border-bottom: 1px solid #ddd;}
.my-account-menu .links a.active {text-decoration: underline;}
.my-account-menu .links a:last-child {border-bottom: 0;}
.isNotMobile .my-account-menu .links a:hover {color: {{settings.content_third_color}};}
.my-account-menu .btn {margin-top: 3.5em;}

@media all and (max-width: 900px) {
  .my-account-menu .links {margin-top: 0;}
  .my-account {padding: 0 0 2em;}
  .my-account .content {width: 100%; margin: 0; background: none; padding: 3em 0 0; border: none;}
  .my-account .content h1 {font-size: 2em; width: 100%; float: none;}
  .my-account .heading .btn {margin-bottom: 1em;}
  .my-account .grid .grid__item {margin-bottom: 2em;}
  .my-account .address-title {width: 60%; line-height: 160%;}
  .my-account .address-actions {width: 100%; margin-left: 0; margin-bottom: 1em; line-height: 120%;}
  .my-account-menu {width: 100%; padding: 2em 0 0; margin: 0; }
  .my-account-menu .goto {position: relative;}
  .my-account-menu .goto .trigger {cursor: pointer; width: 100%; height: 100%; text-transform: uppercase; background: {{settings.content_second_color}}; font-weight: 700; padding: 0 3em 0 1em; position: relative;}
  .my-account-menu .goto .trigger svg {position: absolute; right: 10px; top: 50%; margin-top: -0.5em; display: flex; align-items: center; font-size: 1.6em;}
  .my-account-menu .goto .trigger.open svg {@include rotate(180deg);}
  .my-account-menu .goto .links {display: none; background: #fff; box-sizing: border-box; position: absolute; left: 0; top: 100%; width: 100%; padding: 1em 0 1em 2em; background: {{settings.content_second_color}}; border-top: 0; }
  .my-account-menu .goto .links a {padding: 0.5em 0; border: none;}
  .my-account-menu .logout {width: 35%; padding: 0; margin: 0; padding-left: 1em;}
  .my-account-menu .logout .btn {margin: 0; padding: 0.9em 0; width: 100%; max-width: 100%;}
  
  .my-account table th:first-child {padding-left: 1em;}
  .my-account table td:first-child {padding-left: 0.9em;}
}