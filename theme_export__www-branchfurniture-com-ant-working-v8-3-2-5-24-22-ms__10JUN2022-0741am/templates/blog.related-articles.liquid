{% layout none %}
{
	"tag": "{{current_tags }}",
	"articles":[
		{% for article in blog.articles limit: 3 %}
			{% capture data %}
			{% include 'blog-item', hide_button: false %}
			{% endcapture %}
			{
			"id" : {{article.id}},
			"created_at" : "{{article.created_at | date: "%Y%m%d%H%M%S"}}",
			"html": {{data | replace: '<h2', '<h3' | replace: '</h2', '</h3' | json}}
			}
		{% unless forloop.last %},{% endunless %}
		{% endfor %}
	]
}