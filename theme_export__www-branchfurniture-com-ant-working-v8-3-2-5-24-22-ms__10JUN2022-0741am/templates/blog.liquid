<style>
  #blog {margin: 3em auto; max-width: 1200px;}

  h1 {font-size: 4.643em; line-height: 100%; margin-bottom: 0.5em; letter-spacing: -0.021em;}
  .tag-menu {display: flex; list-style: none; background-color: {{settings.content_main_color}}; margin-bottom: 1.5em;}
  .tag-menu li {padding: 1em 2em; text-transform: uppercase; color: #fff; font-weight: bold; line-height: 128%; letter-spacing: 0.066em;}
  .isNotMobile .tag-menu li a:hover {color: #fff;}
  

  {%- if settings.blog_layout == "grid" -%}
  /**** Blog GRID layout ****/
  .pagination {margin-top: 0}
  
  #blog .template-grid .main-article {width: 100%;}
  #blog .template-grid .main-article h2 {font-size: 3.214em; line-height: 100%; }
  #blog .template-grid .main-article .content {font-size: 1.286em;}
  #blog .template-grid .main-article .separator {display: none;}
  
  @media all and (min-width: 601px) {
    #blog .template-grid .main-article .pic-wrapper .img {padding-top: 57%; }
  }
  
  @media all and (min-width: 901px) {
    #blog .template-grid .main-article {display: flex; justify-content: space-between; align-items: center; margin-bottom: 4em;}
    #blog .template-grid .main-article .pic-wrapper .image {margin-bottom: 0em;}
    #blog .template-grid .main-article .content {margin-bottom: 0em;}
    #blog .template-grid .main-article .pic-wrapper {width: 50%;}
    #blog .template-grid .main-article .text-wrapper {width: 45%;}
    #blog .template-grid .main-article .pic-wrapper .img {padding-top: 66.7%; }
  }

  @media all and (min-width: 1051px) {
    #blog .template-grid .main-article .pic-wrapper {width: 58%;}
    #blog .template-grid .main-article .text-wrapper {width: 37%;}
    #blog .template-grid .main-article .pic-wrapper .img {padding-top: 57%; }
  }
  {%- else -%}

  /**** Blog LIST layout ****/
  #blog .template-list .article {position: relative; }
  .isNotMobile #blog .template-list .articles-wrapper > a:hover {color: inherit;}
  #blog .template-list .article hr {border: none; border-bottom: 1px solid {{settings.bg_color}}; margin: 40px 0;}
  #blog .template-list .pic-wrapper {width: 100%; position: relative;}
  #blog .template-list .pic-wrapper .img {width: 100%; height: 1px; padding-top: 45%; background-size: cover; background-position: center; background-repeat: no-repeat;}
  #blog .template-list .text-wrapper {width: 100%; margin: 1.2em 0 0 0;}
  #blog .template-list .text-wrapper .content {margin-bottom: 1.2em;}
  #blog .template-list .article-date {background-color: #fff; border: 4px solid {{settings.content_main_color}}; position: absolute; left: -20px;  top: 6em; text-transform: uppercase;  color: {{settings.content_main_color}};  width: 5em;  height: 5em; font-size: 1em;  text-align: center; display: flex; display: -webkit-flex; flex-wrap: wrap; justify-content: center; align-content: center;}
  #blog .template-list .article-date span {display: block; width: 100%; position: relative; line-height: 100%;}
  #blog .template-list .article-date span.day {font-size: 2em; margin-bottom: 2px;}
  .isNotMobile #blog .template-list .article:hover .article-date {background-color: {{settings.content_main_color}}; color: #fff;}

  {%- endif -%}
  
  @media all and (max-width: 900px){
    #blog.template-grid .text-wrapper .continue {display: block;} 
    .tag-menu {flex-flow: wrap;}
    .tag-menu li {width: 50%; text-align: center;}
  }
  
  @media all and (max-width: 600px){
    #blog.template-list h2 {text-align: center;}
    #blog.template-list .articles-wrapper {width: 100%; float: none;}
    #blog.template-list .article-date {display: none;}
    .tag-menu li {width: 100%;}
  }
</style>

<div class="blog-container container clearfix">
  <div id="blog" class="blog-content left one-whole small--one-whole">
    <h1><a href="{{blog.url}}">{{blog.title}}</a></h1>
    <ul class="tag-menu justify-content-center">
      {%- if current_tags -%}
      <li>
        <a class="customBlogLinks" href="{{blog.url}}" aria-label="All Articles">All</a>
      </li>
      {%- endif -%}
      {%- for tag in blog.all_tags -%}
      <li>
        <a class="customBlogLinks" href="{{blog.url}}/tagged/{{tag | handle}}" aria-label="Articles tagged {{tag}}">{{tag}}</a>
      </li>
      {%- endfor -%}
    </ul>

    {%- if settings.blog_layout == "list" -%}
    {%- include 'blog_template_list' -%}
    {%- include 'blog_sidebar' -%}
    {%- else %}
    {%- include 'blog_template_grid' -%}
    {%- endif -%}
    
    {% section 'mailing_list' %}
    <style>
      #shopify-section-mailing_list {max-width: 800px; margin: 4em auto;}
      #shopify-section-mailing_list .mailing-list {text-align: center;}
      #shopify-section-mailing_list .mailing-list .form-wrap {width: 31.6em;max-width: 100%; margin-left: auto; margin-right: auto;}
      #shopify-section-mailing_list .mailing-list label {font-size: 2.429em;margin-bottom: 0.4em; letter-spacing: 0.027em; line-height: 120%}
      #shopify-section-mailing_list .mailing-list p {font-size: 1.286em; font-weight: 500; line-height: 120%}
      #shopify-section-mailing_list .mailing-list .success-msg {font-size: 2em;}
      @media (max-width: 600px) {
        #shopify-section-mailing_list .mailing-list label {font-size: 1.85em;}
      }

    </style>
  </div>
</div>