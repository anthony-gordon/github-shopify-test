    #header.over-carousel {color: {{section.settings.over_carousel_text_color}}; position: absolute; z-index: 100; border: none;}
    #header.over-carousel :not(.utility-bar) a:not(:hover) svg path {fill: {{section.settings.over_carousel_text_color}};}
