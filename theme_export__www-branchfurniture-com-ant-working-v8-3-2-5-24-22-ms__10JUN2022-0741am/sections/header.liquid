    z-index: 1000;
  }

  .upper-menu-item {
    position: relative;
    padding: 5px 2px;
    max-height: 33px;
  }

  .upper-menu-item a:hover {
    color: #314438 !important;
  }

  .upper-menu-item.left-menu {
    margin-right: 20px;
  }

  .upper-menu-item.right-menu {
    margin-left: 20px;
  }

  .upper-menu-item:hover {
    border-bottom: 2px solid #8CC1D2;
  }

  .upper-menu-item .fa-caret-down {
    transition: transform .5s ease;
    margin-left: 5px;
  }

  .upper-menu-item:hover .fa-caret-down {
    transform: rotate(180deg);
  }

  .upper-menu-item:hover .upper-menu-item-children {
    max-height: 250px;
  }

  .upper-menu-item-child {
    padding: 7px 15px 0 15px;
  }

  .upper-menu-item-child:hover {
    font-weight: bold;
  }

  .upper-menu-item-child:last-child {
    padding-bottom: 7px;
  }

  @media(max-width:1250px){
    .upper-menu.padding-fix {
      padding: 0 5px;
    }
  }
</style>
