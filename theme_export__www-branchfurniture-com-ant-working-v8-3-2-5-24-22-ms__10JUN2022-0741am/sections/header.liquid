  .header .logo {line-height: 100%; width: 100%; max-width: {{section.settings.logo_max_width}};}
  .header .logo img {width: 100%; display: block;}
  .header .logo .shop-name {font-size: 2em; text-transform: {{ settings.heading_font_transform }}; color: {{ settings.content_heading_color }}; letter-spacing: {{settings.heading_font_letter_spacing}}; line-height: 100%; }
  .header .main-content {position: relative; padding: {{section.settings.header_padding}};}

  .header .container {max-width: 86em;}

  {%- if section.settings.drop_header or section.settings.drop_header_mobile -%}
  /**** header drop ****/
  .header-drop {position: fixed; visibility: hidden; width: 100%; color: {{section.settings.drop_header_text_color}}; background: {{section.settings.drop_header_color}}; {% if section.settings.drop_header_border_color != blank %}border-bottom: 1px solid {{section.settings.drop_header_border_color}};{% else %}border: none;{% endif %} top: 0; z-index: 999; -webkit-transform: translateY(-150%); transform: translateY(-150%);}
  .header-drop svg path {fill: {{section.settings.drop_header_text_color}};}
  .header-drop.scroll {visibility: visible; -webkit-transform: translateY(0);  transform: translateY(0);}
  .header-drop .main-content {position: relative; padding: {{section.settings.drop_header_padding}};}
  .header-drop .logo {max-width: {{section.settings.drop_logo_max_width}};}
  .header-drop .top-utils .logout {display: none;}
  .header-drop .main-menu {margin: 0 2em;}
  .header-drop .main-menu .item a {padding: 1.2em 1em;}
  {%- endif -%}

  /**** menu ****/
  .main-menu .item {position: relative; font-family: inherit; margin: 0; letter-spacing: {{section.settings.menu_letter_spacing}}; text-transform: {{ section.settings.menu_text_transform }}; font-weight: {{section.settings.menu_font_weight}};}
  .main-menu > .item > a {font-size: {{section.settings.menu_font_size}}; }
  .main-menu .item a {display: flex; display: -webkit-flex; align-items: center; padding: 2.5em 1.5em;}
  /*.main-menu .item:first-child a {padding-left: 0;}
  .main-menu .item:last-child a {padding-right: 0;}*/
  .main-menu svg.icon {display: none !important; margin-left: 0.5em;}

  /* .isNotMobile .header a:hover {color: {{settings.content_third_color}};}
  .isNotMobile .header a:hover svg.icon path {fill: {{settings.content_third_color}};} */

  .isNotMobile .header a.custom-first-link-bold {
    transition: border 0s;
    padding-top: 26px !important;
    padding-bottom: 26px !important;
  }

  .isNotMobile .header a.custom-first-link-bold:hover {
    padding-bottom: 24px !important;
    margin-bottom: -3px;
    border-bottom: 3px solid {{settings.content_third_color}};
  }

  /* dropdown menus */
  .main-menu .submenu {display: none; font-size: 1em; background: {{ section.settings.dropdown_bg_color }};}
  .main-menu .has-dropdown > a {position: relative;}
  .main-menu .has-dropdown > a > svg.icon {display: inline-block;}
  .main-menu .has-dropdown .submenu {top: 100%; left: 0; padding: 0; position: absolute; z-index: 30; }
  .main-menu .has-dropdown .item {font-size: 1em; text-align: left; display: block; margin: 0; }
  .main-menu .has-dropdown .item:last-child {border-bottom: 0px;}
  .main-menu .has-dropdown .item a {position: relative; margin: 0; white-space: nowrap; padding: 0.8em 1.5em; border: none;}
  .main-menu .has-dropdown .has-dropdown svg.icon {position: absolute; right: 20px; top: 50%; -webkit-transform: translateY(-50%); transform: translateY(-50%);}

  /* level 3 */
  .main-menu .has-dropdown .submenu .has-dropdown .submenu {top: 0; left: 100%;}

  {%- if settings.mega_menu_width == "adjust" -%}
  .mega-menu .column {background: {{ section.settings.dropdown_bg_color }};}
  {%- endif -%}
  {%- if settings.mega_menu_width == "container" -%}
  .mega-menu .mega-menu-content {background: {{ section.settings.dropdown_bg_color }};}
  {%- endif -%}
  {%- if settings.mega_menu_width == "adjust" and settings.mega_menu_position == "parent" -%}
  .mega-menu {background: {{ section.settings.dropdown_bg_color }} !important;}
  {%- endif -%}

  /* menu mobile */
  .menu-mobile-button svg {font-size: 1.5em;}
  #menu-mobile {display: none; outline: none; visibility: hidden; width: 400px; right: -415px; overflow: hidden; box-shadow: 0 0 30px rgba(0,0,0,0); background-color: {{settings.mobile_menu_bg_color}}; position: fixed; bottom: 0; z-index: 9999;}
  #menu-mobile.open {right: 0; visibility: visible;}
  #menu-mobile .wrapper {display: flex; display: -webkit-flex; flex-direction: column; height: 100%;}
  #menu-mobile .head {margin-top: 0px; box-sizing: border-box; padding: 1.3em 2rem; line-height: 100%; position: relative; margin-bottom: 0; background: {{settings.mobile_menu_title_bg_color}}; border-bottom: 1px solid {{settings.mobile_menu_borders_color}};}
  #menu-mobile .head .title {text-transform:{{settings.mobile_menu_title_transform}}; line-height: 100%; margin: 0; padding: 0; border: none; font-weight: {{settings.mobile_menu_title_weight}}; color: {{settings.mobile_menu_title_color}};  }
  #menu-mobile a {color: {{settings.mobile_menu_text_color}}; display: block;}
  #menu-mobile .close {cursor: pointer; position: absolute; right: 1.5rem; top: 50%; -webkit-transform: translateY(-50%); transform: translateY(-50%); display: flex; display: -webkit-flex; align-items: center; color: {{settings.mobile_menu_title_color}}; }
  #menu-mobile .close svg {font-size: 1.8em;}
  #menu-mobile .close svg path {fill: {{settings.mobile_menu_title_color}};}
  #menu-mobile .content {overflow-y: auto; overflow-x: hidden; flex: 1;}
  #menu-mobile ul {list-style-type: none;}
  #menu-mobile .menu-mobile {padding: 1em 2rem; font-size: {{settings.mobile_menu_font_size}}; }
  #menu-mobile .menu-mobile .item {position: relative; font-weight: 500; border-bottom: 1px solid {{settings.mobile_menu_borders_color}}; padding: 1em 0; text-transform: {{settings.mobile_menu_transform}};}
  #menu-mobile .menu-mobile .item:last-child {border-bottom: 0;}
  #menu-mobile .menu-mobile .item svg {cursor: pointer; position: absolute; top: 0; right: -0.5em; font-size: 1.8em; box-sizing: content-box; padding: 0.5em;}
  /* #menu-mobile .menu-mobile .item svg path {fill: {{settings.mobile_menu_arrows_color}};} */
  /* #menu-mobile .menu-mobile .item.active > a + svg {-ms-transform: rotate(180deg); -webkit-transform: rotate(180deg); transform: rotate(180deg);} */
  #menu-mobile .menu-mobile .submenu {display: none; padding: 1em 0 0 1em; margin-bottom: -1em;}
  #menu-mobile .menu-mobile .submenu .item:first-child {border-top: 1px solid {{settings.mobile_menu_borders_color}};}
  #menu-mobile .top-utils {position: static; display: inline-block;}
  #menu-mobile .top-utils .svg {font-size: 1.2em; margin-top: 3em; }
  #menu-mobile .foot {padding: 2rem; padding-top: 0;}
  #menu-mobile .search-form {position: relative;}
  #menu-mobile .search-form .input-search {padding-right: 3em; border-color: {{settings.mobile_menu_text_color}};}
  #menu-mobile .search-form button {position: absolute; font-size: 1.3em; top: calc(50% + 2px); left: 1.5em; line-height: 100%; -webkit-transform: translateY(-50%); transform: translateY(-50%);}
  #menu-mobile .social-links {margin-top: 2rem; justify-content: flex-start;}
  #menu-mobile .social-links a {margin-right: 1em;}
  #menu-mobile .social-links a:last-child {margin-right: 0;}
  {%- if settings.mobile_menu_position == "left" -%}
  #menu-mobile {right: auto; left: -415px;}
  #menu-mobile.open {right: auto; left: 0;}
  {%- endif -%}

  {%- assign utilityCount = 0 -%}
  {%- for block in section.blocks -%}
 	{%- if block.type == 'utility_bar' and utilityCount == 0 -%}
      {%- assign utilityCount = utilityCount | plus: 1 -%}
        /**** utility bar ****/
        .utility-bar {line-height: 130%; position: relative; overflow: hidden; padding: 0.6em 0; text-align: center;}
        .utility-bar a:hover {color: {{ block.settings.link_hover_color }} !important;}
        .utility-bar .container {padding: 0 2em; max-width: 100%;}
        .utility-bar p {margin: 0; color: inherit;}
        .utility-bar .close {position: absolute; right: 0.5em; top: 50%; font-size: 15px; -webkit-transform: translateY(-50%);  transform: translateY(-50%);}
        .utility-bar .close svg {display: block;}
        .utility-bar .close svg path {fill: inherit;}
    {%- endif -%}
  {%- endfor -%}

  {%- assign topUitlsCount = 0 -%}
  {%- for block in section.blocks -%}
 	{%- if block.type == 'top_utils' and topUitlsCount == 0 -%}
      {%- assign topUitlsCount = topUitlsCount | plus: 1 -%}
