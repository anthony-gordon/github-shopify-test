    #header.article-custom-article {border: 0;}
    .header .container {padding: 0;}
    .header .main-content {position: relative; padding: 0.9em 12px;}
    .header .logo {max-width: {{section.settings.logo_max_width_mobile}};}
    .header .social-links {display: none !important;}
    .utils-wrap {padding: 0;}

    #menu-mobile {display: block;}
  }

  @media all and (max-width: 600px) {
    #header .social-top {display: none;}

    #menu-mobile {width: 100%; right: -101%;}
    {%- if settings.mobile_menu_position == "left" -%}
    #menu-mobile {left: -101%;}
    {%- endif -%}

  }

