<div class="c-fcp-section custom_feature_pro" style="background: {{ section.settings.bg_color }};">
  <div class="cust_container">
    {% if section.settings.heading != blank %}
    <div class="custom_feature_pro_heading">
    <h3>{{ section.settings.heading }}
     
<!--       <span class="c-fcp-arrow-container">
        <span class="c-fcp-arrow-left">{% include 'custom-slide-arrow' %}</span>
        <span class="c-fcp-arrow-right">{% include 'custom-slide-arrow' %}</span>
      </span> -->
    </h3>
     <p>{{ section.settings.sub_heading }}</p>
    </div>
    {% endif %}
    
    

    {% assign c = collections[section.settings.col] %}
    <div class="c-fcp-slider">
      {% for p in c.products limit:3 %}
      <div class="col-md-4">
        <a href="{{ p.url }}">
        <div class="c-fcp-slider-content">
          {% if p %}
          <div class="c-fcp-slider-image-wrapper" style="overflow: hidden; width: 100%;">
          <img src="{{ p | img_url: 'master' }}" alt="" width="409" height="409" class="c-fcp-img" loading="lazy"/>
          </div>
          {% endif %}
          <div class="c-fcp-slider-text">
            {% if p.title != blank %}
            <p class="c-fcp-title">{{ p.title }}</p>
            {% endif %}
            {% if p.price != blank %}
            <p class="c-fcp-price">
              {% if p.compare_at_price != blank %}<span class="c-fcp-compare-price">{{ p.compare_at_price | money_without_trailing_zeros }}</span>{% endif %}
              <span class="c-fcp-org-price">{{ p.price | money_without_trailing_zeros }}</span>
            </p>
            {% endif %}
            {% comment %}
            {% if p.vendor != blank %}
<!--             <p class="c-fcp-vendor">{ { p.vendor }}</p> -->
            {% endif %}
            {% endcomment %}
            {% assign cbo = p.metafields.global %}
            {% assign key = 'collection_bullet_one' %}
            <p class="c-fcp-vendor">{{ cbo.collection_bullet_one }}</p>
          </div>
        </div>
          </a>
      </div>
      {% endfor %}
    </div>
    <div class="custom_feature_pro_btn">
    {% if section.settings.btn-text != blank %}
    <div class="main_feat_btn">
      <a href="{% if section.settings.btn-link == blank %}{{ c.url }}{% else %}{{ section.settings.btn-link }}{% endif %}" class="">{{ section.settings.btn-text }}</a>
    </div>
    {% endif %}
    
     {% if section.settings.visit_showrrom_text != blank %}
         <div class="button_extra_content">
           <p>OR <a href="{{ section.settings.visit_showrrom_url }}">{{ section.settings.visit_showrrom_text }}</a></p>
         </div>
    {% endif %}
    </div>
    
  </div>
</div>
